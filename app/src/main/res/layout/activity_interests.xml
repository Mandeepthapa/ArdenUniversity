<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Interests">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingRight="20dp"
            android:src="@drawable/ic_more_vert_black_24dp" />

        <TextView
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/Interest"
            android:textColor="@color/colorPrimaryDark" />

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D3D3D3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar4">

        <TextView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:padding="18dp"
            android:text="@string/profile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="18dp"
            android:text="@string/Interest" />

        <TextView
            android:id="@+id/fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="18dp"
            android:text="@string/Fav" />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/result"
        android:layout_width="102dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar5" />

    <Button
        android:id="@+id/addinterest"
        android:background="@drawable/my_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:padding="7dp"
        android:text="@string/add"
        android:textColor="@color/add"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar5" />

    <TableLayout
        android:id="@+id/tableLayout3"
        android:layout_width="342dp"
        android:layout_height="277dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/backofinterest"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar5"
        app:layout_constraintVertical_bias="0.0">

        <TableRow android:padding="10dp">

            <TextView
                android:layout_width="134dp"
                android:text="@string/country"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/country"
                android:layout_width="79dp"
                android:layout_gravity="end"
                android:paddingLeft="2dp"
                android:paddingRight="40dp"
                android:text="England"
                android:textColor="@color/colorPrimaryDark" />


        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/toolbar_color_control_normal" />

        <TableRow
            android:layout_width="wrap_content"
            android:padding="10dp">

            <TextView
                android:text="@string/quali"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/quali"
                android:layout_width="193dp"
                android:layout_gravity="end"
                android:paddingLeft="1dp"
                android:paddingRight="40dp"
                android:text="GCE A/AS Level"
                android:textColor="@color/colorPrimaryDark" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/toolbar_color_control_normal" />

        <TableRow android:padding="10dp">

            <TextView
                android:text="@string/course_interest"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/courseinterest"
                android:layout_gravity="end"
                android:paddingRight="40dp"
                android:text="Business"
                android:textColor="@color/colorPrimaryDark" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/toolbar_color_control_normal" />

        <TableRow android:padding="10dp">

            <TextView
                android:text="@string/study_mode"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/studymode"
                android:layout_width="192dp"
                android:layout_gravity="end"
                android:paddingRight="40dp"
                android:text="Part Time"
                android:textColor="@color/colorPrimaryDark" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/toolbar_color_control_normal" />

        <TableRow android:padding="10dp">

            <TextView
                android:text="@string/session_start"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/sessionstart"
                android:layout_gravity="end"
                android:paddingRight="40dp"
                android:text="Jan 2018"
                android:textColor="@color/colorPrimaryDark" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/toolbar_color_control_normal" />

        <LinearLayout
            android:layout_gravity="end">


            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/delete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_highlight_off_black_24dp" />

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:src="@drawable/ic_edit_black_24dp" />

        </LinearLayout>
    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout4"
        android:layout_width="343dp"
        android:layout_height="273dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/backofinterest"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout3"
        app:layout_constraintVertical_bias="0.0">

        <TableRow android:padding="10dp">

            <TextView
                android:layout_width="134dp"
                android:text="@string/country"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/country1"
                android:layout_width="79dp"
                android:layout_gravity="end"
                android:paddingLeft="2dp"
                android:paddingRight="40dp"
                android:text="Nepal"
                android:textColor="@color/colorPrimaryDark" />


        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/toolbar_color_control_normal" />

        <TableRow
            android:layout_width="wrap_content"
            android:padding="10dp">

            <TextView
                android:text="@string/quali"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/qualify"
                android:layout_width="193dp"
                android:layout_gravity="end"
                android:paddingLeft="1dp"
                android:paddingRight="40dp"
                android:text="GCE A/AS Level"
                android:textColor="@color/colorPrimaryDark" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/toolbar_color_control_normal" />

        <TableRow android:padding="10dp">

            <TextView
                android:text="@string/course_interest"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/courseinterest1"
                android:layout_gravity="end"
                android:paddingRight="40dp"
                android:text="IT"
                android:textColor="@color/colorPrimaryDark" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/toolbar_color_control_normal" />

        <TableRow android:padding="10dp">

            <TextView
                android:text="@string/study_mode"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/studymode1"
                android:layout_width="192dp"
                android:layout_gravity="end"
                android:paddingRight="40dp"
                android:text="Full Time"
                android:textColor="@color/colorPrimaryDark" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/toolbar_color_control_normal" />

        <TableRow android:padding="10dp">

            <TextView
                android:text="@string/session_start"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/sessionstart1"
                android:layout_gravity="end"
                android:paddingRight="40dp"
                android:text="Jan 2019"
                android:textColor="@color/colorPrimaryDark" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/toolbar_color_control_normal" />

        <LinearLayout>


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_highlight_off_black_24dp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_edit_black_24dp" />

        </LinearLayout>
    </TableLayout>

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout4">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="5">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:src="@drawable/ic_home_black_24dp"
            tools:ignore="ContentDescription"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/account"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity=""
            android:src="@drawable/ic_account_balance_black_24dp"
            tools:ignore="ContentDescription"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/search"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_search_black_24dp"
            tools:ignore="ContentDescription"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/favo"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_favorite_border_black_24dp"
            tools:ignore="ContentDescription"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/userinfo"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_person_outline_black_24dp"
            tools:ignore="ContentDescription"
            android:layout_weight="1"/>
</LinearLayout>
    </android.support.v7.widget.Toolbar>

    </android.support.constraint.ConstraintLayout>
</ScrollView>
