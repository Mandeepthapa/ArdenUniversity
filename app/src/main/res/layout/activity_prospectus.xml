<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Prospectus">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/pros"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="69dp"
            tools:layout_editor_absoluteY="16dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingLeft="0dp"
            android:paddingRight="20dp"
            android:src="@drawable/ic_more_vert_black_24dp" />
    </android.support.v7.widget.Toolbar>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="360dp"
        android:layout_height="479dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar8">

        <ImageView
            android:layout_width="174dp"
            android:layout_height="221dp"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/worcesterpros" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="246dp"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/queens" />

        <ImageView
            android:layout_width="164dp"
            android:layout_height="246dp"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/liverpool" />

        <ImageView
            android:layout_width="176dp"
            android:layout_height="247dp"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/westlondon" />


    </GridLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar6"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="5">
        <ImageView
            android:id="@+id/home"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:src="@drawable/ic_home_black_24dp"
            tools:ignore="ContentDescription"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/account"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_account_balance_black_24dp"
            tools:ignore="ContentDescription"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/search"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_search_black_24dp"
            tools:ignore="ContentDescription"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/favo"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_favorite_border_black_24dp"
            tools:ignore="ContentDescription"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/userinfo"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_person_outline_black_24dp"
            tools:ignore="ContentDescription"
            android:layout_weight="1"
          />
</LinearLayout>
    </android.support.v7.widget.Toolbar>

</android.support.constraint.ConstraintLayout>


</ScrollView>